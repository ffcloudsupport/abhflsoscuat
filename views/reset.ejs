<%- include('partials/header') %>
<div class="form-container">
	<% if(locals.err) { %>
        <div class="alert alert-danger"><%= err %></div>
    <% } %>
	<% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
	<form method="post">
		<h3>Forgot Password</h3>
		<hr></hr>
		<div class="form-group">
            <label for="username"><b style="color:black;">Username</b></label>
            <input type="email" name="username" id="username" class="form-control" value="<%= locals.username || '' %>" required />
        </div>
		<div class="form-group">
            <button type="submit" class="btn btn-primary"><b style="color:white;">Reset</b></button>
            <a href="/login" class="btn btn-link"><b style="color:black;">Cancel</b></a>
        </div>
	 </form>
</div>
<%- include('partials/footer') %>

